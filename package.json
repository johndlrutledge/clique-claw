{
  "name": "cliqueclaw",
  "displayName": "CliqueClaw",
  "description": "Streamline agent development with the BMAD method",
  "version": "1.0.0",
  "publisher": "john-rutledge",
  "author": {
    "name": "John Rutledge",
    "url": "https://rustydevops.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/johndlrutledge/cliqueclaw.git"
  },
  "homepage": "https://rustydevops.com",
  "bugs": {
    "url": "https://github.com/johndlrutledge/cliqueclaw/issues"
  },
  "keywords": [
    "bmad",
    "workflow",
    "agile",
    "sprint",
    "claude",
    "ai",
    "project-management"
  ],
  "icon": "images/icon.png",
  "sponsor": {
    "url": "https://github.com/bmad-code-org/BMAD-METHOD"
  },
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/sprint-status.yaml",
    "workspaceContains:**/bmm-workflow-status.yaml",
    "onView:cliqueDiscovery",
    "onView:cliquePlanning",
    "onView:cliqueSolutioning",
    "onView:cliqueImplementation"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clique",
          "title": "CliqueClaw",
          "icon": "images/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "clique": [
        {
          "id": "cliqueDiscovery",
          "name": "Discovery",
          "when": "clique.hasWorkflowFile"
        },
        {
          "id": "cliquePlanning",
          "name": "Planning",
          "when": "clique.hasWorkflowFile"
        },
        {
          "id": "cliqueSolutioning",
          "name": "Solutioning",
          "when": "clique.hasWorkflowFile"
        },
        {
          "id": "cliqueImplementation",
          "name": "Implementation",
          "when": "clique.hasWorkflowFile"
        },
        {
          "id": "cliqueWelcome",
          "name": "Get Started",
          "when": "!clique.hasWorkflowFile",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "clique.runWorkflow",
        "title": "Run Workflow",
        "icon": "$(play)"
      },
      {
        "command": "clique.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "clique.setStatus.backlog",
        "title": "Set Status: Backlog"
      },
      {
        "command": "clique.setStatus.readyForDev",
        "title": "Set Status: Ready for Dev"
      },
      {
        "command": "clique.setStatus.inProgress",
        "title": "Set Status: In Progress"
      },
      {
        "command": "clique.setStatus.review",
        "title": "Set Status: Review"
      },
      {
        "command": "clique.setStatus.done",
        "title": "Set Status: Done"
      },
      {
        "command": "clique.selectFile",
        "title": "Select Sprint File",
        "icon": "$(folder-opened)"
      },
      {
        "command": "clique.showWorkflowDetail",
        "title": "Show Workflow Details"
      },
      {
        "command": "clique.runPhaseWorkflow",
        "title": "Run Workflow",
        "icon": "$(play)"
      },
      {
        "command": "clique.skipWorkflow",
        "title": "Skip Workflow"
      },
      {
        "command": "clique.initializeWorkflow",
        "title": "Initialize Workflow"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "clique.runWorkflow",
          "when": "view == cliqueImplementation && viewItem == story-actionable",
          "group": "inline"
        },
        {
          "command": "clique.setStatus.backlog",
          "when": "view == cliqueImplementation && viewItem =~ /^story/",
          "group": "status@1"
        },
        {
          "command": "clique.setStatus.readyForDev",
          "when": "view == cliqueImplementation && viewItem =~ /^story/",
          "group": "status@2"
        },
        {
          "command": "clique.setStatus.inProgress",
          "when": "view == cliqueImplementation && viewItem =~ /^story/",
          "group": "status@3"
        },
        {
          "command": "clique.setStatus.review",
          "when": "view == cliqueImplementation && viewItem =~ /^story/",
          "group": "status@4"
        },
        {
          "command": "clique.setStatus.done",
          "when": "view == cliqueImplementation && viewItem =~ /^story/",
          "group": "status@5"
        },
        {
          "command": "clique.runPhaseWorkflow",
          "when": "view =~ /clique(Discovery|Planning|Solutioning|Implementation)/ && viewItem == workflow-actionable",
          "group": "inline"
        },
        {
          "command": "clique.showWorkflowDetail",
          "when": "view =~ /clique(Discovery|Planning|Solutioning|Implementation)/ && viewItem =~ /^workflow/",
          "group": "navigation"
        },
        {
          "command": "clique.skipWorkflow",
          "when": "view =~ /clique(Discovery|Planning|Solutioning|Implementation)/ && viewItem == workflow-actionable",
          "group": "workflow@1"
        }
      ],
      "view/title": [
        {
          "command": "clique.selectFile",
          "when": "view == cliqueImplementation",
          "group": "navigation@1"
        },
        {
          "command": "clique.refresh",
          "when": "view == cliqueImplementation",
          "group": "navigation@2"
        }
      ]
    },
    "submenus": [
      {
        "id": "clique.statusSubmenu",
        "label": "Set Status"
      }
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "hook:pre-commit": "npm run lint && npm run test:core && npm run test:e2e-scripts && npm run build && npx --yes @vscode/vsce package",
    "hook:pre-push": "npm run test:all && npm run build && npx --yes @vscode/vsce package",
    "vscode:prepublish": "npm run build",
    "build": "npm run build:wasm && npm run build:ts",
    "build:ts": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "build:wasm": "cd rust && wasm-pack build clique-wasm --target nodejs --out-dir ../../dist/wasm",
    "build:wasm:debug": "cd rust && wasm-pack build clique-wasm --target nodejs --out-dir ../../dist/wasm --dev",
    "watch": "npm run build -- --watch",
    "compile": "tsc -p ./",
    "lint": "tsc -p ./ --noEmit",
    "test:parity": "npx ts-node scripts/parity-test.ts",
    "test:wasm": "npx ts-node src/__tests__/wasmIntegration.test.ts",
    "test:e2e-scripts": "npx ts-node src/__tests__/e2eBuildScripts.test.ts",
    "test:reliability": "npx ts-node src/__tests__/reliability.test.ts",
    "test:edge": "npx ts-node src/__tests__/edgeCases.test.ts",
    "test:ui": "npx ts-node src/__tests__/uiLayer.test.ts",
    "test:core": "npx ts-node src/__tests__/coreLayer.test.ts",
    "test:release": "npx ts-node src/__tests__/releaseVerification.test.ts",
    "test:fuzz": "npx jest --testPathPattern=fuzz --testTimeout=120000",
    "test:fuzz:rust": "cd rust/clique-core && cargo test fuzz_ --release -- --nocapture",
    "test:fuzz:quick": "cd rust/clique-core && set PROPTEST_CASES=50 && cargo test fuzz_ --release -- --nocapture",
    "test:all": "npm run test:parity && npm run test:wasm && npm run test:e2e-scripts && npm run test:reliability && npm run test:edge && npm run test:ui && npm run test:core && npm run test:release",
    "test:coverage": "c8 --check-coverage --lines 80 --reporter text --reporter lcov npm run test:all",
    "test": "npm run test:coverage",
    "fuzz": "pwsh scripts/fuzz.ps1",
    "fuzz:quick": "pwsh scripts/fuzz.ps1 -Mode quick",
    "fuzz:deep": "pwsh scripts/fuzz.ps1 -Mode libfuzzer -Duration 300",
    "bench:perf": "npx ts-node scripts/perf-bench.ts",
    "e2e": "pwsh scripts/e2e-build.ps1",
    "e2e:unix": "bash scripts/e2e-build.sh",
    "e2e:ci": "bash scripts/e2e-build.sh"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/mock-require": "^3.0.0",
    "@types/node": "^25.2.0",
    "@types/vscode": "^1.108.1",
    "c8": "^10.1.3",
    "esbuild": "^0.27.2",
    "jest": "^30.2.0",
    "husky": "^9.1.7",
    "mock-require": "^3.0.3",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "yaml": "^2.8.2"
  }
}